@model List<BookingProject.Dal.Entities.Fours>

@{
    int count = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<br />
<br />
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Sıra</th>
            <th>#</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>Fiyat</th>


            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.FoursID</td>
                <td>@item.Image</td>
                <td>@item.Title</td>
                <td>@item.Price</td>

                <td><a href="/Four/DeleteFours/@item.FoursID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Four/UpdateFours/@item.FoursID" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Four/CreateFours" class="btn btn-primary">Yeni Four Girişi</a>
</div>