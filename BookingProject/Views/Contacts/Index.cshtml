@model List<BookingProject.Dal.Entities.Contacts>

@{
    int count = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<br />
<br />
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Sıra</th>
            <th>#</th>
            <th>Açıklama</th>
            <th>Adres</th>
            <th>No</th>
            <th>Mail</th>
            <th>Fax</th>


            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.ContactsID</td>
                <td>@item.Description</td>
                <td>@item.Adress</td>
                <td>@item.No</td>
                <td>@item.Mail</td>
                <td>@item.Fax</td>


                <td><a href="/Contacts/DeleteContacts/@item.ContactsID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Contacts/UpdateContacts/@item.ContactsID" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Contacts/CreateContacts" class="btn btn-primary">Yeni İletişim Girişi</a>
</div>