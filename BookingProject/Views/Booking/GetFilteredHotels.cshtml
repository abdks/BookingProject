<style>
    /* Yeni renk tanımlamaları */
    :root {
        --custom-green: #2DA64D;
        --custom-black: #000000;
    }

    /* Başlıkların ve butonun renk ve kalınlığını güncelle */
    .card-title {
        color: var(--custom-green);
        font-weight: bold;
        font-size: 1.2em; /* İstenilen büyüklükte bir değer verilebilir */
    }

    button.btn-primary {
        background-color: var(--custom-green);
        border-color: var(--custom-green);
    }

    /* Hotel adının kalın ve renkli olması */
    .card-body h5 {
        color: var(--custom-green);
        font-weight: bold;
        font-size: 1.2em; /* İstenilen büyüklükte bir değer verilebilir */
    }

    /* Kutu içindeki bilgilerin renk ve kalınlığını güncelle */
    .card-body p {
        color: var(--custom-black); /* İstenilen renk verilebilir */
    }

    /* Kutu içindeki değerlendirme ve puan bilgilerinin rengini güncelle */
    .card-body .text-warning {
        color: var(--custom-green);
    }

    /* Aradığın Oteller Burada yazısının rengini güncelle */
    .container-fluid h5.text-primary {
        color: var(--custom-green);
    }

    /* Kutuların border rengi ve kalınlığını güncelle */
    .card {
        border: 2px solid var(--custom-green);
    }

    /* Grubunuz için öneriliyor satırını gizle */
    .card-body p:contains('Grubunuz için öneriliyor') {
        display: none;
    }
</style>




