<!DOCTYPE html>
<div class="container-fluid py-5 my-5">
    <div class="container">
        <div class="text-center mx-auto pb-5 wow fadeIn" data-wow-delay=".3s" style="max-width: 600px;">
            <h5 style="color: #2DA64D">Aradığın Oteller Burada</h5>
            <h1></h1>
        </div>
        @foreach (var item in Model.result)
        {
            <div class="card mb-4 wow fadeIn" data-wow-delay=".7s">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@item.max_1440_photo_url" class="img-fluid rounded-start" alt="@item.hotel_name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.hotel_name</h5>
                            <p class="card-text"><strong>Adres:</strong> @item.address</p>
                            <p class="card-text"><strong>Gecelik:</strong> @item.min_total_price ₺</p>
                            <p class="card-text">
                                <strong>Ücretsiz İptal:</strong>
                                @if (item.is_free_cancellable == 1)
                                {
                                    <span>Var</span>
                                }
                                else if (item.is_free_cancellable == 0)
                                {
                                    <span>Yok</span>
                                }
                                else
                                {
                                    <span>Bilgi Yok</span>
                                }
                            </p>
                            <p class="card-text"><strong>Puan:</strong> @item.review_score</p>

                            <p class="card-text"><strong>Şehir Merkezine Uzaklık:</strong> @item.distance_to_cc KM</p>
                            <p class="card-text">
                                <strong>Ücretsiz Otopark:</strong>
                                @if (item.has_free_parking == 1)
                                {
                                    <span>Var</span>
                                }
                                else if (item.has_free_parking == 0)
                                {
                                    <span>Yok</span>
                                }
                                else
                                {
                                    <span>Bilgi Yok</span>
                                }
                            </p>

                          
                            <button type="button" class="btn btn-primary">Yer Durumuna Bak</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
