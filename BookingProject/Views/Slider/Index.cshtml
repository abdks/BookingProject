@model List<BookingProject.Dal.Entities.Sliders>

@{
    int count = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<br />
<br />
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Sıra</th>
            <th>#</th>
            <th>Resim</th>
           

            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.SlidersID</td>
                <td>@item.ImageURL</td>

                <td><a href="/Slider/DeleteSliders/@item.SlidersID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Slider/UpdateSliders/@item.SlidersID" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Slider/CreateSliders" class="btn btn-primary">Yeni Slider Girişi</a>
</div>